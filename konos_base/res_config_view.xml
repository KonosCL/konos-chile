<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- Base Config Settings Form View -->
		<record id="view_konos_base_configuration" model="ir.ui.view">
			<field name="name">konos.base.settings</field>
			<field name="model">konos.base.config.settings</field>
			<field name="arch" type="xml">
				<form string="Configure" class="oe_form_configuration" version="8.0">
					<header>
						<button string="Apply" type="object" name="execute" class="oe_highlight" />
						or
						<button string="Cancel" type="object" name="cancel" class="oe_link" />
					</header>

					<separator string="Konos Easy Wizard" />
					<div>
						<p>
							<label
								string="Easily configure your options." />
						</p>
					</div>


					<separator string="Contactos" />
					<group>
						<label for="id" string="Validación de Rut"/>
						<div name="partners">
							<div name='module_l10n_cl_base_rut'>
								<field name="module_l10n_cl_base_rut"
									class="oe_inline"/>
								<label for="module_l10n_cl_base_rut" />
							</div>

						</div>
					</group>




					
					<separator string="Finanzas" />
					<group>
						<label for="id" string="Finanzas" />	

						<!-- module_decimal_precision_currency -->

						<div name="finance">

							<div name='module_l10n_cl_chart_of_account'>
								<field name="module_l10n_cl_chart_of_account"
									class="oe_inline" />
								<label for="module_l10n_cl_chart_of_account" />
							</div>			
							
							<div name='module_l10n_cl_banks_sbif'>
								<field name="module_l10n_cl_banks_sbif"
									class="oe_inline" />
								<label for="module_l10n_cl_banks_sbif" />
							</div>
							<div name='module_l10n_cl_financial_indicators'>
								<field name="module_l10n_cl_financial_indicators"
									class="oe_inline" />
								<label for="module_l10n_cl_financial_indicators" />
							</div>
							<div name='module_l10n_cl_libro_compra_venta'>
								<field name="module_l10n_cl_libro_compra_venta"
									class="oe_inline" />
								<label for="module_l10n_cl_libro_compra_venta" />
							</div>
							<div name='module_vit_journal_voucher'>
								<field name="module_vit_journal_voucher"
									class="oe_inline" />
								<label for="module_vit_journal_voucher" />
							</div>
							<div name='module_l10n_cl_balance'>
								<field name="module_l10n_cl_balance"
									class="oe_inline" />
								<label for="module_l10n_cl_balance" />
							</div>
							<div name='module_customer_account_followup'>
								<field name="module_customer_account_followup"
									class="oe_inline" />
								<label for="module_customer_account_followup" />
							</div>
						</div>
					</group>

					<separator string="Compras" />
					<group>
						<label for="id" string="Formatos" />
						<div name="module_layouts_custom">
							<div name='module_layouts_custom'>
								<field name="module_layouts_custom" class="oe_inline" />
								<label for="module_layouts_custom" />
							</div>
						</div>
					</group>

					<separator string="Ventas" />


					<group>
						<label for="id" string="Partner Activities" />
						<div name="partneractivities">
							<div name='module_l10n_cl_partner_activities'>
								<field name="module_l10n_cl_partner_activities" class="oe_inline" />
								<label for="module_l10n_cl_partner_activities" />
							</div>
						</div>
					</group>
					<group>
						<label for="id" string="Invoicing" />	
						<div name="invoicing">
							<div name='module_l10n_cl_invoice'>
								<field name="module_l10n_cl_invoice" class="oe_inline" />
								<label for="module_l10n_cl_invoice" />
							</div>
							<div name='module_l10n_cl_counties'>
								<field name="module_l10n_cl_counties"
									class="oe_inline" />
								<label for="module_l10n_cl_counties" />
							</div>	
							<div name='module_l10n_cl_dte'>
								<field name="module_l10n_cl_dte"
									class="oe_inline" />
								<label for="module_l10n_cl_dte" />
							</div>	
							<div name='module_l10n_cl_dte_caf'>
								<field name="module_l10n_cl_dte_caf"
									class="oe_inline" />
								<label for="module_l10n_cl_dte_caf" />
							</div>	
							<div name='module_l10n_cl_dte_factoring'>
								<field name="module_l10n_cl_dte_factoring"
									class="oe_inline" />
								<label for="module_l10n_cl_dte_factoring" />
							</div>	
							<div name='module_l10n_cl_stock_picking'>
								<field name="module_l10n_cl_stock_picking"
									class="oe_inline" />
								<label for="module_l10n_cl_stock_picking" />
							</div>
							<div name='module_l10n_cl_dte_point_of_sale'>
								<field name="module_l10n_cl_dte_point_of_sale"
									class="oe_inline" />
								<label for="module_l10n_cl_dte_point_of_sale" />
							</div>					
	
						</div>
					</group>



					<separator string="Human Resources" />
					<group>
						<label for="id" string="Payroll" />
						<div name="payroll">
							<div name='module_l10n_cl_hr_payroll'>
								<field name="module_l10n_cl_hr_payroll" class="oe_inline" />
								<label for="module_l10n_cl_hr_payroll" />
							</div>
						</div>
						<div name="payrollanalytic">
							<div name='module_payroll_analytic_account'>
								<field name="module_payroll_analytic_account" class="oe_inline" />
								<label for="module_payroll_analytic_account" />
							</div>
						</div>
						<div name="module_hr_holiday_exclude_special_days">
							<div name='module_hr_holiday_exclude_special_days'>
								<field name="module_hr_holiday_exclude_special_days" class="oe_inline" />
								<label for="module_hr_holiday_exclude_special_days" />
							</div>
						</div>
					</group>


					<separator string="Recomended" />
					<group>
						<label for="id" string="All" />
						<div name="Decimal Precision">
							<div name='module_decimal_precision'>
								<field name="module_decimal_precision" class="oe_inline" />
								<label for="module_decimal_precision" />
							</div>
						</div>
						<div name="Decimal Precision Currency">
							<div name='module_decimal_precision_currency'>
								<field name="module_decimal_precision_currency" class="oe_inline" />
								<label for="module_decimal_precision_currency" />
							</div>
						</div>
						<div name="Mass Editing">
							<div name='module_mass_editing'>
								<field name="module_mass_editing" class="oe_inline" />
								<label for="module_mass_editing" />
							</div>
						</div>
						<div name="Base Currency Inverse Rate">
							<div name='module_base_currency_inverse_rate'>
								<field name="module_base_currency_inverse_rate" class="oe_inline" />
								<label for="module_base_currency_inverse_rate" />
							</div>
						</div>
						<div name="Account Cancel">
							<div name='module_account_cancel'>
								<field name="module_account_cancel" class="oe_inline" />
								<label for="module_account_cancel" />
							</div>
						</div>
						<div name="Web Export View">
							<div name='module_web_export_view'>
								<field name="module_web_export_view" class="oe_inline" />
								<label for="module_web_export_view" />
							</div>
						</div>
						<div name="Global Discount">
							<div name='module_global_discount'>
								<field name="module_global_discount" class="oe_inline" />
								<label for="module_global_discount" />
							</div>
						</div>
						<div name="Account Payment Group">
							<div name='module_account_payment_group'>
								<field name="module_account_payment_group" class="oe_inline" />
								<label for="module_account_payment_group" />
							</div>
						</div>	
						<div name="Recupera Contraseña">
							<div name='module_auth_signup'>
								<field name="module_auth_signup" class="oe_inline" />
								<label for="module_auth_signup" />
							</div>
						</div>	
						<div name="Respaldos Automáticos">
							<div name='module_auto_backup'>
								<field name="module_auto_backup" class="oe_inline" />
								<label for="module_auto_backup" />
							</div>
						</div>					
					</group>
				</form>
			</field>
		</record>

		<!-- Base Config Settings Action -->
		<record id="action_konos_base_configuration" model="ir.actions.act_window">
			<field name="name">Configure</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">konos.base.config.settings</field>
			<field name="view_mode">form</field>
			<field name="target">inline</field>
		</record>

		<!-- Base Config Settings Menu -->
		<menuitem id="menu_konos_base_configuration"
			action="action_konos_base_configuration"
			name="Konos Wizard" parent="base.menu_config" sequence="110" />

	</data>
</openerp>
